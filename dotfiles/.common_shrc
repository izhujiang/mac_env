#echo "source .common_shrc"

# fixing unknown locale: UTF-8
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
unset LC_CTYPE

export SSH_KEY_PATH="~/.ssh/rsa_id"

alias ll='ls -GFlas'
alias vi=vim

alias gz="tar -xzvf"
alias tgz="tar -xzvf"
alias bz2="tar -xjvf"
alias zip="unzip"


