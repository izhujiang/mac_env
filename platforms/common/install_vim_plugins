#!/bin/sh

cd ${HOME}
if [ ! -d ${HOME}/.vim ]; then 
  git clone --recursive -j8 git@github.com:izhujiang/vim-plugin.git .vim
else
  cd .vim
  git pull
  git submodule update --recursive
fi

vim +PluginInstall +qall


# compile YouCompleteMe plugin with propert arguments after installation.
cd .vim/bundle/YouCompleteMe
# install ycm with python2.* support
# ./install.py --clang-completer --gocode-completer
# ./run_tests.py
# install ycm with python3 support
python3 install.py --clang-completer --gocode-completer
python3 run_tests.py
cd ${MY_ENV_ROOT}/platforms/common
