#!/bin/sh

COMMON_PATH=${MY_ENV_ROOT}/platforms/common

# install python 3rd party packages
. ${COMMON_PATH}/install_python_extras

# install gem 3d party packages
. ${COMMON_PATH}/install_gem_extras

# install node.js 3d party packages
. ${COMMON_PATH}/install_nodejs_extras

# install zsh, ohmyzsh and powerline as well as its custom plugins
. ${COMMON_PATH}/install_zsh_extras

# install vim and nvim plugins
. ${COMMON_PATH}/install_vim_extras
