#!/bin/sh

sudo apt install -y zsh wget cmake python3 tmux 
# install xclip for copying to system clipboard, supporting tmux.
sudo apt install -y xclip 

# install zsh and ohmyzsh as well as its custom plugins
chsh -s /bin/zsh

# install vim with python3 support
# sudo apt install vim --with-python3
source ${MY_ENV_ROOT}/platforms/linux/build_vim

# brew install go

source ${MY_ENV_ROOT}/platforms/common/install_extras
source ${MY_ENV_ROOT}/configs/all_configs

# setup my dev_env with tmux and vim 
# ln -s apps/my_ide ${HOME}/my_ide
