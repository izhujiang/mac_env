#!/bin/sh

sudo apt-get update
sudo apt-get check
sudo apt-get -f install

sudo apt install -y git

sudo apt install -y wget cmake autoconf libtool libtool-bin python3 python3-pip ruby zlib1g-dev libbz2-dev libreadline-dev libsqlite3-dev libssl-dev tmux

sudo apt install -y vim 
# install vim with python3 support
# source ${MY_ENV_ROOT}/platforms/linux/build_vim

# install xclip for copying to system clipboard, supporting tmux.
sudo apt install -y xclip
sudo apt install -y astyle

sudo apt install -y golang

sudo apt install -y npm

. ${MY_ENV_ROOT}/platforms/common/install_extras

# setup my dev_env with tmux and vim
# ln -s apps/my_ide ${HOME}/my_ide
