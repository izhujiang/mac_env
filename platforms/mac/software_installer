#!/bin/sh

/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew tap caskroom/cask
# springboot
# brew tap pivotal/tap
# brew install springboot
brew install wget
brew install cmake
# brew cask install java8
brew install go
brew install ruby
brew install node
brew install jq

brew install tmux
brew install readline xz
# reattach-to-user-namespace support copy and pasty
brew install reattach-to-user-namespace
brew install astyle

# install vim with python3 support
brew install python3 pipenv
# brew install vim --enable-pythoninterp=dynamic --enable-python3interp=dynamic
brew install vim --enable-pythoninterp=dynamic
echo "" > ${HOME}/.vim_cfg

brew install httpie

brew install zsh autojump

source ${MY_ENV_ROOT}/platforms/common/install_extras
