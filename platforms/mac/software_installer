#!/bin/sh

/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

sudo brew install wget
sudo brew install cmake
sudo brew install python
sudo brew install python3
sudo brew install tmux
sudo brew install readline xz
# install vim with python3 support
sudo brew install vim --with-python3
echo "" > ${HOME}/.vim_cfg

# reattach-to-user-namespace support copy and pasty
sudo brew install reattach-to-user-namespace

sudo brew install go

sudo brew install ruby

sudo brew install node

sudo brew install astyle

sudo brew install zsh autojump

source ${MY_ENV_ROOT}/platforms/common/install_extras
# source ${MY_ENV_ROOT}/configs/all_configs

# setup my dev_env with tmux and vim 
# ln -s apps/my_ide ${HOME}/my_ide
