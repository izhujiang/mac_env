#!/bin/sh

/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

brew install wget
brew install cmake
brew install python
brew install python3
brew install tmux

# install zsh and ohmyzsh as well as its custom plugins
chsh -s /bin/zsh
source ../common/install_zsh_extras

# with python2.* support
# brew install vim 
# brew remove vim
# clean up cache if necessay
# brew cleanup
# install vim with python3 support
brew install vim --with-python3
source ../common/install_vi_plugins

brew install go


source ../../configs/all_configs

# setup my dev_env with tmux and vim 
ln -s apps/my_ide ${HOME}/my_ide
