#!/bin/sh

# xcode-select --install
/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew tap caskroom/cask
# springboot
# brew tap pivotal/tap
# brew install springboot
brew install wget
brew install cmake

brew install zsh autojump
# brew cask install java8

brew install go
brew install ruby
brew install node yarn
brew install jq

# install useful libs
brew install pcre openssl gd geoip
# install nginx, or install nginx manually from sourcecode, and fix --with-http_ssl_module bug referring to https://www.widlabs.com/article/mac-os-x-nginx-compile-symbol-not-found-for-architecture-x86_64
brew install nginx

brew install tmux
brew install readline xz
# reattach-to-user-namespace support copy and pasty
brew install reattach-to-user-namespace
brew install astyle

# install vim with python3 support
brew install python3 pipenv
# may neovim is better choice
brew install neovim
# brew install vim --enable-pythoninterp=dynamic --enable-python3interp=dynamic
brew install vim --enable-pythoninterp=dynamic
echo "" > ${HOME}/.vim_cfg

brew install httpie


source ${MY_ENV_ROOT}/platforms/common/install_extras
# source ${MY_ENV_ROOT}/configs/all_configs

# setup my dev_env with tmux and vim
# ln -s apps/my_ide ${HOME}/my_ide
