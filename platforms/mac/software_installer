brew install python
brew install python3
brew cask reinstall java
brew install tmux
brew install readline xz
# reattach-to-user-namespace support copy and pasty
brew install reattach-to-user-namespace
# with python2.* support
# brew install vim 
# brew remove vim
# clean up cache if necessay
# brew cleanup
# install vim with python3 support
brew install vim --with-python3
echo "" > ${HOME}/.vim_cfg


brew install go
brew install ruby
brew install node

brew install astyle

source ${MY_ENV_ROOT}/platforms/common/install_extras
